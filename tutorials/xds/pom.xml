<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.openehealth.ipf.tutorials</groupId>
    <artifactId>ipf-tutorials-xds</artifactId>
    <name>ipf-tutorials-xds</name>
    <packaging>jar</packaging>
     
    <parent>
        <groupId>org.openehealth.ipf.tutorials</groupId>
        <artifactId>ipf-tutorials</artifactId>
        <version>2.5-SNAPSHOT</version>
    </parent>

    <properties>
        <osgi.export.pkg>
            org.openehealth.ipf.tutorials.xds.*;version="${pom.version}"
        </osgi.export.pkg>
        <osgi.import.pkg>
            org.openehealth.ipf.platform.camel.core.extend,
            org.openehealth.ipf.platform.camel.core.util,
            org.openehealth.ipf.platform.camel.ihe.xds,
            org.openehealth.ipf.platform.camel.ihe.xds.core.extend,
            org.openehealth.ipf.commons.ihe.xds.core.requests,
            org.openehealth.ipf.commons.ihe.xds.core.responses,
            org.openehealth.ipf.commons.ihe.xds.core.validate,
            org.apache.commons.io,
            org.apache.cxf.bus.spring,
            javax.activation,
            javax.mail.util,
            META-INF.cxf,
            *
        </osgi.import.pkg>
        <ipf.extension.beans>regRepModelExtension</ipf.extension.beans>
    </properties>

    <dependencies>
        <!-- Dependencies for main -->
        <dependency>
            <groupId>org.openehealth.ipf.platform-camel</groupId>
            <artifactId>ipf-platform-camel-ihe-xds</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.platform-camel</groupId>
            <artifactId>ipf-platform-camel-ihe-xds</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>ipf-commons-ihe-xds</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>ipf-commons-ihe-ws</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.platform-camel</groupId>
            <artifactId>ipf-platform-camel-ihe-ws</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>tomcat-catalina</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>tomcat-coyote</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>tomcat-jasper</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- Dependencies for test -->
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>ipf-commons-ihe-core</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>